{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name": {"type": "string"},
        "version": {"type": "string"},
        "dependencies": {
            "type": "array",
            "items": {"type": "string"}
        },
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {"type": "string"},
                    "description": {"type": "string"},
                    "files": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {"type": "string"},
                                "description": {"type": "string"},
                                "destination": {"type": "string"},
                            },
                            "required": ["name", "destination"]
                        }
                    },
                    "templates": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {"type": "string"},
                                "description": {"type": "string"},
                                "destination": {"type": "string"},
                            },
                            "required": ["name", "destination"]
                        }
                    },
                    "scripts": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "hook": {"type": "string"},
                                "name": {"type": "string"},
                                "template": {"type": "string"},
                                "content": {"type": "string"}
                            },
                            "oneOf": [
                                {"required": ["name"]},
                                {"required": ["template"]},
                                {"required": ["content"]}
                            ]
                        }
                    }
                },
                "required": ["name"]
            }
        }
    },
    "required": ["name", "version", "tasks"]
}